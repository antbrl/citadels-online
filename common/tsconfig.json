{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext"
    ],
    "outDir": "dist",
    "declaration": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ]
}